background_label.place(x=0, y=0, relwidth=1, relheight=1)
background_label.image = background_image  # Keep reference!
    
# condition if doesn't work, make background light gray
print(f"Error loading background: ")
    # Fallback to solid color
root.configure(bg='lightgray')

# Adding widgets on top of the background
label = tk.Label(root, text="Welcome to the Main UI", font=("Arial", 20), bg="white")
label.pack(pady=20)

